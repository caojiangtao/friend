<view class="container">

    <view class="my-photo">
       <image class="userinfo-avatar" src="{{avatarUrl}}" name="image"/>
      <view class="click-change" bindtap="choosephoto">更换真实照片</view>
     </view>
  <form bindsubmit='formSubmit'>
  <input  placeholder="爱好~"maxlength="20"  class='introduction' name="textarea" />
  <input  placeholder="联系方式~" type="number" class='telephone' name="input"  />
  <input  placeholder="年龄~" type="number" class='telephone' name="age"  />
  <textarea placeholder="自我介绍~"maxlength="140"  class='introduce' name="introduce"></textarea>

  <button type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}"
         form-type='submit' class='tijiao'> 提交 </button>
        </form>
</view>