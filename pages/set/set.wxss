.my-photo{
  position:relative;
  border-radius: 10%;
  width:300rpx;
  height:300rpx;
  overflow: hidden;
  border:2rpx solid #09bb07;
  margin:40rpx auto;
  display: block;
  text-align: center;
  vertical-align: middle;
  line-height: 300rpx;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
}
.userinfo-avatar{
  width:300rpx;
  height:300rpx;
  float: left;
  margin-right: 20rpx;
}
.introduction,.telephone{
  width: auto;
  margin:80rpx 40rpx;
  border-bottom:2rpx solid #888888;
  font-size: 30rpx;
   color: #576b95;
  box-sizing: border-box;
  height: 30rpx;
}
.click-change{
  position: absolute;
  z-index: 1000;
  background: rgba(000, 000, 000, 0.3);
  width: 100%;
  height:100%;
}
button[type="primary"] {
  margin:40rpx;
}
.introduce{
  border:1rpx solid #ccc;
  padding: 10rpx;
  border-radius: 10rpx;
  height:150rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  margin: 5rpx 20rpx;
  color: #576b95;
}