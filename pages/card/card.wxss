.my-photo{
  width:100%;
  height: auto;
  margin:40rpx auto;
  display: block;
  text-align: center;
  vertical-align: middle;
  color: #fff;
  font-weight: bold;
  border:1px solid #fff;
}
.userinfo-avatar{
  width:100%;
  margin-right: 20rpx;
}
.introduction,.telephone,.name{
  width: auto;
  margin:30rpx 40rpx;
  font-size: 30rpx;
   color: #888;
  box-sizing: border-box;
  height: 40rpx;
}
.name{
  text-align: center;
}
.click-change{
  position: absolute;
  z-index: 1000;
  background: rgba(000, 000, 000, 0.3);
  width: 100%;
  height:100%;
}
button[type="primary"] {
  margin:40rpx;
}